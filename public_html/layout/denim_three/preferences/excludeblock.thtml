{# begin {templatelocation} #}

<fieldset>
  <legend>{lang_exclude_title}</legend>

  <div class="linear">
    <div class="profile_notes" uk-alert>
      <div class="uk-panel-title">
        <span class="uk-text-primary" uk-icon="info"></span>
        <span>{lang_excluded_items_title}</span>
      </div>
      <div>{lang_excluded_items}</div>
    </div>
  </div>

  <div class="compact">
    <dl class="form_block">
      <dt><label>{lang_topics}</label></dt>
      <dd class="controls_text"><div id="exclude_topic" class="uk-panel uk-panel-scrollable">{exclude_topic_checklist}</div></dd>

      {!if exclude_author_checklist}
      <dt><label>{lang_authors}</label></dt>
      <dd>{exclude_author_checklist}</dd>
      {!endif}
    </dl>
  </div>
</fieldset>

{# end {templatelocation} #}
