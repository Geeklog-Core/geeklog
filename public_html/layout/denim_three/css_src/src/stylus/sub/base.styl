    line-height: @font-size + 6px
h2
    font-size: 20px
    line-height: @font-size + 6px
h3
    font-size: 18px
    line-height: @font-size + 6px
h4
    font-size: 16px
    line-height: @font-size + 6px
h5
    font-size: 14px
    line-height: @font-size + 6px
h6
    font-size: 12px
    line-height: @font-size + 6px

