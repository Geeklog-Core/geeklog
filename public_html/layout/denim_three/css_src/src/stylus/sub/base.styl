/*!--------------------------------------
  Modify UIkit3 styles
--------------------------------------*/

/* ========================================================================
   Component: Tab
 ========================================================================== */
/* Items
 ========================================================================== */
.uk-tab > * > a {
  border-bottom: 2px solid transparent;
}

/* ========================================================================
   Component: Alert
 ========================================================================== */
.uk-alert {
  padding: 20px;
}
/* Style modifiers
 ========================================================================== */
/*
 * Primary
 */
.uk-alert-primary {
  background: #ebf7fd;
  color: #2d7091;
}
/*
 * Success
 */
.uk-alert-success {
  background: #edfbf6;
  color: #32d296;
}
/*
 * Warning
 */
.uk-alert-warning {
  background: #fff6ee;
  color: #faa05a;
}
/*
 * Danger
 */
.uk-alert-danger {
  background: #fef4f6;
  color: #f0506e;
}

/* ========================================================================
   Component: Breadcrumb
 ========================================================================== */
/*
 * Divider
 * `nth-child` makes it also work without JS if it's only one row
 */
.uk-breadcrumb > :nth-child(n+2):not(.uk-first-column)::before {
  content: "/";
  display: inline-block;
/*  margin: 0 20px;*/
  margin: 0 10px;
  color: #999;
}

