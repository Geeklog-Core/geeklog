.uk-radio,
input[type="checkbox"]:not(.uk-checkbox),
input[type="checkbox"]:not(.uk-radio) {
  margin-left: 3px;
  margin-right: 3px;

  vertical-align: middle;
}

.uk-input,
.uk-button,
.uk-select,
.uk-textarea,
input[type="submit"],
input[type="button"],
input[type="reset"],
select:not(.uk-select),
textarea:not(.uk-textarea) {
  margin: 0 0 3px;
}

