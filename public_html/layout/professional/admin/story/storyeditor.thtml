                                                 </select>
                                                 /
                                                 <select name="cmt_close_year">
                                                    {cmt_close_year_options}
                                                 </select>&nbsp;&nbsp;
                                                 <select name="cmt_close_hour">
                                                     {cmt_close_hour_options}
