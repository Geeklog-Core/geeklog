{# begin {templatelocation} #}

<form name="change" action="{site_url}/switchlang.php" method="get">
    <div>
        <input type="hidden" name="oldlang" value="{langId}"{XHTML}>
        <input type="hidden" name="itemid" value="{itemId}"{XHTML}>
        <input type="hidden" name="itemtype" value="{itemtype}"{XHTML}>
        <select onchange="change.submit()" name="lang">
            {language_options}
        </select>
    </div>
</form>

{# end {templatelocation} #}