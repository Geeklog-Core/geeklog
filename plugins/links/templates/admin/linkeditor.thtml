<p>{instructions}</p>

<br style="clear:both"{xhtml}>

                                <form action="{site_admin_url}/plugins/links/index.php" method="post">
                                    <table border="0" cellspacing="0" cellpadding="2" width="100%">

                                        <tr>
                                            <td align="right">{lang_linktitle}:</td>
                                            <td>
                                                <input type="text" size="48" maxlength="96" name="title" value="{link_title}"{xhtml}>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="right">{lang_linkid}:</td>
                                            <td>
                                                <input type="text" size="40" maxlength="40" name="lid" value="{link_id}"{xhtml}>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="right">{lang_linkurl}:</td>
                                            <td>
                                                <input type="text" size="48" maxlength="{max_url_length}" name="url" value="{link_url}"{xhtml}> {lang_includehttp}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="right">{lang_category}:</td>
                                            <td>
                                                <select name="categorydd">
                                                    {category_options}
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="right">{lang_linkhits}:</td>
                                            <td>
                                                <input type="text" size="11" name="hits" value="{link_hits}"{xhtml}>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="right" valign="top">{lang_linkdescription}:</td>
                                            <td>
                                                <textarea name="description" cols="50" rows="8">{link_description}</textarea>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2"><hr{xhtml}></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2"><b>{lang_accessrights}</b></td>
                                        </tr>
                                        <tr>
                                            <td align="right">{lang_owner}:</td>
                                            <td>{owner_name}<input type="hidden" name="owner_id" value="{link_ownerid}"{xhtml}></td>
                                        </tr>
                                        <tr>
                                            <td align="right">{lang_group}:</td>
                                            <td>
                                                {group_dropdown}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2"><b>{lang_permissions}</b>:</td>
                                        </tr>
                                        <tr>
                                            <td colspan="2"></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">{lang_permissionskey}</td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                {permissions_editor}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">{lang_lockmsg}</td>
                                        </tr>
                                        <tr><td>&nbsp;</td></tr>
                                        <tr>
                                            <td colspan="2">
                                                <input type="submit" value="{lang_save}" name="mode"{xhtml}>
                                                <input type="submit" value="{lang_cancel}" name="mode"{xhtml}>
                                                <input type="hidden" value="{link_id}" name="old_lid"{xhtml}>
                                                {delete_option}
                                            </td>
                                        </tr>
                                    </table>
                                </form>
                                <script type="text/javascript" defer="defer">editor_generate('description');</script>
